# Symfony Environment Configuration
APP_ENV=dev
APP_SECRET=your-secret-key-here-please-change-in-production

# Database Configuration
DATABASE_URL=postgresql://symfony:symfony@db:5432/symfony

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# Doctrine Configuration
DOCTRINE_DBAL_URL=${DATABASE_URL}

# Symfony Messenger
MESSENGER_TRANSPORT_DSN=redis://redis:6379/messages

# Mailer Configuration (if needed)
MAILER_DSN=null://null

###> doctrine/doctrine-bundle ###
